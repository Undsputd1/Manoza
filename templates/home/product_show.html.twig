{% extends 'front_base_html.twig' %}

{% block title %}{{ product.name }} — AVENNTA{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-6">
            <img src="{{ product.image ?: 'https://via.placeholder.com/800x600?text=No+Image' }}" 
                 alt="{{ product.name }}" class="img-fluid rounded shadow-sm">
        </div>

        <div class="col-md-6">
            <h1 class="fw-bold">{{ product.name }}</h1>
            <p class="h4 text-success">₱{{ product.price }}</p>

            <p class="mt-3">
                {{ product.description is defined and product.description ? product.description : 'No description available.' }}
            </p>

            <div class="mt-4">
                <button class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-cart"></i> Add to Cart
                </button>

                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
