{% extends 'front_base_html.twig' %}

{% block title %}AVENNTA - Mountaineering & Snow Gear{% endblock %}

{% block body %}
{# Hero Section: Dark Carousel with Overlay #}
<section class="hero-carousel position-relative">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=1350&q=80" class="d-block w-100" alt="Mountain">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                    <h1 class="display-4 fw-bold text-light">Gear Up for Adventure</h1>
                    <p class="lead text-light">Mountaineering & Snow Climbing Gear for Every Explorer</p>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-primary btn-lg mt-3">Shop Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1605810575374-6b5d8a3d0e5c?auto=format&fit=crop&w=1350&q=80" class="d-block w-100" alt="Snow Mountain">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                    <h1 class="display-4 fw-bold text-light">Snow Adventures</h1>
                    <p class="lead text-light">Explore snowy peaks safely</p>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-primary btn-lg mt-3">Shop Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1509228627153-4b1aab5b1f0b?auto=format&fit=crop&w=1350&q=80" class="d-block w-100" alt="People Climbing">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                    <h1 class="display-4 fw-bold text-light">Reach New Heights</h1>
                    <p class="lead text-light">Join fellow climbers today</p>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-primary btn-lg mt-3">Shop Now</a>
                </div>
            </div>
        </div>

        {# Carousel Controls #}
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

{# Featured Products Section: Dark Cards #}
<section class="py-5 bg-dark text-light">
    <div class="container">
        <h2 class="text-center mb-5">Featured Products</h2>
        <div class="row g-4">
            {% for product in featuredProducts %}
                <div class="col-md-4 col-sm-6">
                    <div class="card h-100 bg-secondary text-light shadow-lg">
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text fw-bold">â‚±{{ product.price|number_format(2, '.', ',') }}</p>
                            <a href="{{ path('app_front_product_show', {'id': product.id}) }}" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted">No featured products found.</p>
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}
