{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">User Management</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-success px-4 py-2 shadow-sm">
            ➕ Create New User
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-3">
            <table id="usersTable" class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <span class="text-muted">{{ user.password|slice(0, 12) ~ '...' }}</span>
                            </td>
                            <td>
                                {% if user.role == 'admin' %}
                                    <span class="badge bg-danger">Admin</span>
                                {% elseif user.role == 'client' %}
                                    <span class="badge bg-primary">Client</span>
                                {% elseif user.role == 'dietitian' %}
                                    <span class="badge bg-success">Dietitian</span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" 
                                   class="btn btn-sm btn-primary text-white me-1">Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                                   class="btn btn-sm btn-warning text-white">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-3">No users found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# ✅ Include DataTables CSS + JS #}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

{# ✅ Initialize DataTable #}
<script>
    $(document).ready(function() {
        $('#usersTable').DataTable({
            "pageLength": 10,
            "lengthChange": false,
            "ordering": true,
            "info": false,
            "language": {
                "search": "Search Users:",
                "zeroRecords": "No matching users found"
            }
        });
    });
</script>
{% endblock %}
