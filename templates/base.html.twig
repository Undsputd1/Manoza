<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}AVENNTA Admin{% endblock %}</title>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons CDN #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {# Custom CSS for dashboard #}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
</head>
<body>
    <div class="layout d-flex">
        <!-- Sidebar -->
        <aside class="sidebar bg-dark text-light p-3 vh-100">
            <h2 class="logo mb-4">AVENNTA</h2>
            <nav class="nav flex-column">
                <a href="{{ path('app_admin') }}"
                   class="nav-link text-light {% if app.request.attributes.get('_route') == 'app_admin' %}active{% endif %}">
                   ğŸ  Dashboard
                </a>
                <a href="{{ path('app_product_index') }}"
                   class="nav-link text-light {% if app.request.attributes.get('_route') starts with 'app_product' %}active{% endif %}">
                   ğŸ“¦ Products
                </a>
                <a href="{{ path('app_category_index') }}"
                   class="nav-link text-light {% if app.request.attributes.get('_route') starts with 'app_category' %}active{% endif %}">
                   ğŸ·ï¸ Categories
                </a>
                <a href="{{ path('app_user_index') }}"
                   class="nav-link text-light {% if app.request.attributes.get('_route') starts with 'app_user' %}active{% endif %}">
                   ğŸ‘¥ Users
                </a>
                <a href="{{ path('app_order_index') }}"
                   class="nav-link text-light {% if app.request.attributes.get('_route') starts with 'app_order' %}active{% endif %}">
                   ğŸ›’ Orders
                </a>
                <a href="#" class="nav-link text-muted disabled">â­ Reviews</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content flex-grow-1 p-4">
            <header class="topbar d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">{% block page_title %}{% endblock %}</h1>
                <div class="d-flex align-items-center gap-3">
                    {# ğŸŒ Switch to User Site Button #}
                    <a href="{{ path('app_home') }}" class="btn btn-outline-primary btn-sm">
                        ğŸŒ Switch to User Site
                    </a>

                    <div class="profile">
                        <span class="user">ğŸ‘¤ Admin</span>
                    </div>
                </div>
            </header>

            <section class="content">
                {% block body %}{% endblock %}
            </section>
        </main>
    </div>

    {# Bootstrap JS Bundle (includes Popper) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
