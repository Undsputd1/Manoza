{% extends 'front_base_html.twig' %}

{% block title %}{{ product.name }} - Product Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6 text-center">
                {% if product.image %}
                    <img src="{{ asset('uploads/' ~ product.image) }}" 
                         alt="{{ product.name }}" 
                         class="img-fluid rounded" 
                         style="max-height: 400px; object-fit: contain;">
                {% else %}
                    <img src="{{ asset('images/no-image.png') }}" 
                         alt="No image available" 
                         class="img-fluid rounded" 
                         style="max-height: 400px; object-fit: contain;">
                {% endif %}
            </div>

            <!-- Product Details -->
            <div class="col-md-6">
                <h2 class="fw-bold">{{ product.name }}</h2>
                <p class="text-muted mb-2">₱{{ product.price|number_format(2, '.', ',') }}</p>
                <hr>

                <h5>Description:</h5>
                <p>{{ product.reviews }}</p>

                <div class="mt-4">
                    <a href="{{ path('app_shop_index') }}" class="btn btn-secondary">
                        ← Back to Shop
                    </a>
                    <a href="#" class="btn btn-primary">
                        Add to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}