{% extends 'front_base_html.twig' %}

{% block title %}Shop - AVENNTA{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Our Products</h1>

    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm h-100">
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                    {% else %}
                        <img src="{{ asset('images/placeholder.png') }}" class="card-img-top" alt="No image">
                    {% endif %}

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-muted">{{ product.item|slice(0, 80) ~ '...' }}</p>
                        <p class="fw-bold text-success mb-3">â‚±{{ product.price|number_format(2) }}</p>
                        <a href="{{ path('app_front_product_show', {'id': product.id}) }}" class="btn btn-primary mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center">
                <p class="text-muted">No products available at the moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
