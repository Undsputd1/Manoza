{% extends 'base.html.twig' %}

{% block title %}Create New Product{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3">
          <h3 class="mb-0">üõçÔ∏è Create New Product</h3>
        </div>
        <div class="card-body p-4">
          {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(form.name) }}
            {{ form_row(form.item) }}
            {{ form_row(form.price) }}
            {{ form_row(form.stock) }}
            {{ form_row(form.ordering) }}
            {{ form_row(form.reviews) }}
            {{ form_row(form.category) }}
            {{ form_row(form.image) }} {# ‚úÖ corrected line #}

            <div class="mt-4 text-center">
              <button class="btn btn-success px-4 py-2">üíæ Save Product</button>
              <a href="{{ path('app_product_index') }}" class="btn btn-secondary px-4 py-2">‚Ü© Back to List</a>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
